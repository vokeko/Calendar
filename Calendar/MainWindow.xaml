<Window x:Class="Calendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calendar"
        mc:Ignorable="d"
        Title="Kalendář" Height="150" Width="300" MinHeight="130" MinWidth="200" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblTime" Grid.Row="0" Content="1.1.2020 12:00" HorizontalContentAlignment="Center" FontSize="20"/>
        <Label x:Name="lblDay" Grid.Row="1" Content="Pondělí" HorizontalContentAlignment="Center" FontSize="15"/>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,4">
            <Button x:Name="btnAdd" Content="+" Width="20" Margin="2,0,2,0" ToolTip="Přidat událost" Click="btnAdd_Click"/>
            <Button x:Name="btnEdit" Content="x" Width="20" Margin="0,0,2,0" ToolTip="Upravit událost" Click="btnEdit_Click"/>
            <Button x:Name="btnRemove" Content="-" Width="20" Margin="0,0,10,0" ToolTip="Odstranit událost" Click="btnRemove_Click"/>
            <Button x:Name="btnShowAll" Content="o" Width="20" Margin="0,0,2,0" ToolTip="Zobrazit události" Click="btnShowAll_Click"/>
        </StackPanel>
    </Grid>
</Window>
